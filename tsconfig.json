{
    "compilerOptions": {
      "baseUrl": ".",
      "lib": ["dom", "esnext"],
      "skipLibCheck": true,
      "target": "es5",
      "strict": true,

      /** TypeScript checks */
      "noUnusedLocals": true,
      "noUnusedParameters": true,

      /** JavaScript/CommonJS integration */
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitThis": false,

      /** webpack integration */
      "paths": {
        "@/*": ["src/*"]
      },
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx"
    }
  }
